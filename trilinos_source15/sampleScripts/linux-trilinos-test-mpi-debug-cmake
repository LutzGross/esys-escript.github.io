EXTRA_ARGS=$@

cmake \
-D CMAKE_INSTALL_PREFIX:PATH=$HOME/install/trilinos/serial/debug \
-D TPL_ENABLE_MPI:BOOL=ON \
  -D MPI_BASE_DIR:PATH=/home/trilinos/bin \
-D BUILD_SHARED_LIBS:BOOL=ON \
-D MEMORYCHECK_COMMAND:FILEPATH=/usr/local/bin/valgrind \
-D DART_TESTING_TIMEOUT:STRING=600 \
-D Trilinos_ENABLE_TESTS:BOOL=ON \
-D Trilinos_ENABLE_CHECKED_STL:BOOL=ON \
-D Trilinos_ENABLE_EXPLICIT_INSTANTIATION:BOOL=ON \
-D Teuchos_ENABLE_DEBUG_RCP_NODE_TRACING:BOOL=ON \
-D Teuchos_ENABLE_FLOAT:BOOL=OFF \
-D Teuchos_ENABLE_COMPLEX:BOOL=OFF \
$EXTRA_ARGS \
../../Trilinos
