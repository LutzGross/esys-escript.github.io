Import('*')
local_env = env.Clone()

# get the test source file names
sources = Glob('*.py')

# compile
pyc = local_env.PyCompile(sources)
local_env.Depends(pyc, py_wrapper_lib)

# install
py_inst = local_env.Install(local_env['pyinstall']+'/weipa', pyc)
env.Alias('install_weipa_py', py_inst)

