#!/bin/bash
if [ ! -e Makefile ]; then ln -s ./HBtest.mk Makefile; fi
make -f ./Makefile clean
make -f ./Makefile
echo ----------------------------------------------------------------------------
./HBtest.exe mtx.mm out.hb skjfhysdkh
cmp -s out.hb out.hb.correct
if [ $? != 0 ]
then
	echo "out.hb and out.hb.correct differ"
	echo "!! Test FAILED !!"
        make -f ./Makefile clean
        exit 1
else
	echo "** Test PASSED **"
	rm -f out.hb
        make -f ./Makefile clean
        exit 0
fi
