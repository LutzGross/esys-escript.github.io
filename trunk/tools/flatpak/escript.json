                "cflags": "-w",
                "cxxflags": "-w",
                "ldflags": "-lgfortran -llapack -lopenblas -L/app/lib"
            },
            "build-commands": [
                "make library -j`nproc --all` MY_METIS_LIB=/app/lib/libmetis.a INSTALL=/app",
                "make install -j`nproc --all` MY_METIS_LIB=/app/lib/libmetis.a INSTALL=/app"
            ],
            "builddir": true,
            "sources": [
