            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/trilinos/Trilinos"
                }
            ]
        },
        {
            "name": "gmsh",
            "buildsystem": "cmake",
            "build-options" : {
                "cflags": "-w -Wno-dev",
                "cxxflags": "-w -Wno-dev"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "http://gmsh.info/src/gmsh-4.1.5-source.tgz",
                    "sha256": "654d38203f76035a281006b77dcb838987a44fd549287f11c53a1e9cdf598f46"
                }
            ]
