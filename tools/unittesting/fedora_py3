FROM fedora

LABEL maintainer="a.ellery@uq.edu.au"

WORKDIR /app
COPY . /app

RUN yum update -y
RUN yum install -y python3
RUN yum install -y python3-devel python3-scipy python3-pyproj python3-matplotlib
RUN yum install -y boost-devel boost-python3 boost-numpy3 boost-iostreams boost-random
RUN yum install -y netcdf-devel netcdf-cxx netcdf-cxx-devel netcdf-cxx4 netcdf-cxx4-devel
RUN yum install -y suitesparse-devel
RUN yum install -y gcc-c++ scons git
RUN git clone https://github.com/esys-escript/esys-escript.github.io --depth 1 /app/escript
RUN cd /app/escript && scons options_file=scons/templates/fedora_py3_options.py -j`nproc` build_full
ENV LD_LIBRARY_PATH=/app/escript/lib:$LD_LIBRARY_PATH
ENV PYTHONPATH=/app/escript:$PYTHONPATH
ENV PATH=/app/escript/bin:$PATH
RUN cd /app/escript && ./utest.sh /app/escript/build '-t7'
RUN useradd -ms /bin/bash appuser
RUN run-escript /app/escript/scripts/release_sanity.py
RUN rm -rf *

CMD ["/bin/bash"]
