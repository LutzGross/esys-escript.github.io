import os
Import('*')

if 'Clone' in dir(env): local_env = env.Clone() # scons-0.98
else:                   local_env = env.Copy()  # scons-0.96

sources = """
	TestCase.cpp
	TestFailure.cpp
	TestResult.cpp
	TestRunner.cpp
	TestSuite.cpp
	TextTestResult.cpp
""".split()
headers = """
	CppUnitException.h
	CppUnitTestNamespace.h
	Guards.h
	Test.h
	TestCaller.h
	TestCase.h
	TestFailure.h
	TestResult.h
	TestRunner.h
	TestSuite.h
	TextTestResult.h
	estring.h
""".split()

lib = local_env.StaticLibrary('CppUnitTest', sources)
env.Alias('target_cppunittest_a', lib)

include_path = Dir('tools/CppUnitTest', local_env['incinstall'])

tmp1 = local_env.Install(include_path, headers )
env.Alias('target_install_cppunittest_headers', [tmp1])

tmp2 = local_env.Install(local_env['libinstall'], lib)
env.Alias('target_install_cppunittest_a', [tmp2])

